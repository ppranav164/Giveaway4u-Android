<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CONNECTION_FAILED">


    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:text="Oops..!"/>

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_below="@id/head"
        android:src="@drawable/ic_oops"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message"
        android:text="Connection Failed !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="25dp"
        android:textColor="@color/grey"
       />

    <TextView
        android:id="@+id/descmessage"
        android:text="Check your connection to the internet and try again."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        />


     <ImageButton
         android:src="@drawable/ic_refresh"
         android:layout_below="@id/descmessage"
         android:layout_centerHorizontal="true"
         android:id="@+id/refreshbutton"
         android:layout_width="wrap_content"
         android:layout_marginTop="50dp"
         android:background="@color/transparent"
         android:layout_height="wrap_content"/>



</RelativeLayout>