<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgottpasswrodActivity">


   <RelativeLayout
       android:id="@+id/forgottenlayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:orientation="horizontal"
           android:id="@+id/headers"
           android:layout_width="match_parent"
           android:padding="5dp"
           android:layout_height="wrap_content">


           <ImageView
               android:paddingLeft="10dp"
               android:layout_gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_key"/>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="4dp"
               android:text="ENTER OTP CODE"
               android:textColor="@color/darkbl"
               android:paddingLeft="10dp"
               android:id="@+id/cartCounts"
               android:gravity="left|center"
               />

       </LinearLayout>


       <LinearLayout
           android:id="@+id/otpfiled"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginTop="@dimen/dimen_50dp"
           android:gravity="center"
           android:layout_below="@id/headers"
           android:orientation="horizontal">

           <EditText
               android:id="@+id/fnum"
               android:imeOptions="actionNext"
               android:inputType="number"
               android:maxLines="1"
               android:singleLine="true"
               android:lines="1"
               android:textSize="32dp"
               android:gravity="center"
               android:layout_width="@dimen/dimen_60dp"
               android:layout_height="@dimen/dimen_60dp"/>
           <EditText
               android:id="@+id/snum"
               android:textSize="32dp"
               android:gravity="center"
               android:imeOptions="actionNext"
               android:inputType="number"
               android:maxLines="1"
               android:layout_width="@dimen/dimen_60dp"
               android:layout_height="@dimen/dimen_60dp"/>
           <EditText
               android:imeOptions="actionNext"
               android:textSize="32dp"
               android:gravity="center"
               android:inputType="number"
               android:maxLines="1"
               android:id="@+id/tnum"
               android:layout_width="@dimen/dimen_60dp"
               android:layout_height="@dimen/dimen_60dp"/>
           <EditText
               android:textSize="32dp"
               android:gravity="center"
               android:imeOptions="actionNext"
               android:inputType="number"
               android:maxLines="1"
               android:id="@+id/fonum"
               android:layout_width="@dimen/dimen_60dp"
               android:layout_height="@dimen/dimen_60dp"/>

       </LinearLayout>



       <TextView
           android:layout_marginTop="@dimen/dimen_20dp"
           android:layout_below="@id/otpfiled"
           android:id="@+id/warning"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:textColor="@color/red"
           />

       <LinearLayout
           android:padding="@dimen/dimen_20dp"
           android:layout_below="@id/warning"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <Button
               android:id="@+id/clearOTP"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/dusk_button"
               android:text="Clear"/>

       </LinearLayout>

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:id="@+id/submit_OTP"
           android:background="@color/black"
           android:layout_alignParentBottom="true"
           android:text="Submit"/>

   </RelativeLayout>

</RelativeLayout>